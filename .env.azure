###############################################################################
# AMT Dashboard - Azure Environment Variables Template
# Copy this file to .env.azure and fill in your actual values
###############################################################################

#-----------------------------------------------------------------------------
# Azure Configuration
#-----------------------------------------------------------------------------
RESOURCE_GROUP="amt-production"
CONTAINER_APP_NAME="amt-dashboard"
CONTAINER_REGISTRY="dbcamtregistry"
MANAGED_ENVIRONMENT="managedEnvironment-amtproduction-b6cb"

#-----------------------------------------------------------------------------
# Public Environment Variables (Build-time)
#-----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL="https://api.analyzemyteam.com"
NEXT_PUBLIC_GRAPHQL_URL="https://graphql.analyzemyteam.com/graphql"

#-----------------------------------------------------------------------------
# Secrets (Runtime - Store in Azure Container App Secrets)
#-----------------------------------------------------------------------------

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Anthropic API (M.E.L. AI Engine)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Neo4j Configuration (Triangle Defense Graph Database)
NEO4J_URI="neo4j+s://your-instance.databases.neo4j.io"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your-neo4j-password"

# HubSpot CRM Integration (Optional)
HUBSPOT_ACCESS_TOKEN="your-hubspot-access-token"
HUBSPOT_PORTAL_ID="your-portal-id"

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

#-----------------------------------------------------------------------------
# Application Configuration
#-----------------------------------------------------------------------------
NODE_ENV="production"
ENABLE_EXECUTIVE_ONBOARDING="true"
ONBOARDING_SEQUENCE="alexandra,courtney,denauld"

#-----------------------------------------------------------------------------
# Executive Bot Configuration
#-----------------------------------------------------------------------------
# Alexandra "The Coordinator" Martinez - Chief Administrative Officer
ALEXANDRA_BOT_ENABLED="true"
ALEXANDRA_BOT_PRIORITY="3"

# Courtney "The Shield" Sellars - CEO/Chief Legal Officer
COURTNEY_BOT_ENABLED="true"
COURTNEY_BOT_PRIORITY="2"

# Denauld "The Mastermind" Brown - Founder, CEO & Defensive Coordinator
DENAULD_BOT_ENABLED="true"
DENAULD_BOT_PRIORITY="1"

#-----------------------------------------------------------------------------
# M.E.L. AI Configuration
#-----------------------------------------------------------------------------
MEL_SERVICE_URL="https://mel-service.analyzemyteam.com"
MEL_API_KEY="your-mel-api-key"

#-----------------------------------------------------------------------------
# GraphQL Federation Configuration
#-----------------------------------------------------------------------------
GRAPHQL_FEDERATION_URL="https://graphql.analyzemyteam.com/graphql"
HIVE_ANALYTICS_URL="clickhouse://hive-analytics:9000"

#-----------------------------------------------------------------------------
# Triangle Defense Configuration
#-----------------------------------------------------------------------------
TRIANGLE_DEFENSE_ENABLED="true"
FORMATION_CACHE_TTL="3600"

#-----------------------------------------------------------------------------
# Monitoring & Observability
#-----------------------------------------------------------------------------
APPLICATIONINSIGHTS_CONNECTION_STRING="InstrumentationKey=your-app-insights-key"
LOG_LEVEL="info"

#-----------------------------------------------------------------------------
# Security Headers
#-----------------------------------------------------------------------------
ALLOWED_ORIGINS="https://portal.analyzemyteam.com,https://app.analyzemyteam.com"
CORS_ENABLED="true"

#-----------------------------------------------------------------------------
# Feature Flags
#-----------------------------------------------------------------------------
FEATURE_POWER_PLAYBOOKS="true"
FEATURE_MEL_AI="true"
FEATURE_DYNAMIC_FABRICATOR="false"
FEATURE_EXECUTIVE_SUITE="false"
FEATURE_GAME_CHANGER="false"
FEATURE_Q3_QUARTERBACK="false"
FEATURE_DYNAMIC_PREDICTOR="false"
FEATURE_PRO_SCOUT="false"
FEATURE_RECRUIT="false"
FEATURE_STRENGTH="false"
FEATURE_MEDICINE="false"
FEATURE_ACADEMICS="false"

###############################################################################
# NOTES
###############################################################################
# 
# To set these secrets in Azure Container Apps:
# 
# az containerapp secret set \
#   --name amt-dashboard \
#   --resource-group amt-production \
#   --secrets \
#     jwt-secret=$JWT_SECRET \
#     anthropic-key=$ANTHROPIC_API_KEY \
#     supabase-url=$NEXT_PUBLIC_SUPABASE_URL \
#     supabase-anon-key=$NEXT_PUBLIC_SUPABASE_ANON_KEY \
#     neo4j-uri=$NEO4J_URI \
#     neo4j-password=$NEO4J_PASSWORD
# 
# To update environment variables to reference secrets:
# 
# az containerapp update \
#   --name amt-dashboard \
#   --resource-group amt-production \
#   --set-env-vars \
#     "JWT_SECRET=secretref:jwt-secret" \
#     "ANTHROPIC_API_KEY=secretref:anthropic-key" \
#     "NEXT_PUBLIC_SUPABASE_URL=secretref:supabase-url" \
#     "NEXT_PUBLIC_SUPABASE_ANON_KEY=secretref:supabase-anon-key" \
#     "NEO4J_URI=secretref:neo4j-uri" \
#     "NEO4J_PASSWORD=secretref:neo4j-password"
#
###############################################################################
