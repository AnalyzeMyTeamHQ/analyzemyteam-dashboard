# AMT Portal Environment Configuration
# Copy this file to .env.local and update with your actual values

# ============================================
# API ENDPOINTS
# ============================================
NEXT_PUBLIC_API_URL=https://api.analyzemyteam.com
NEXT_PUBLIC_GRAPHQL_URL=https://graphql.analyzemyteam.com/graphql
NEXT_PUBLIC_GRAPHQL_WS_URL=wss://graphql.analyzemyteam.com/graphql

# ============================================
# AUTHENTICATION
# ============================================
# Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# AMT INFRASTRUCTURE
# ============================================
# GraphQL Federation endpoints
HIVE_ANALYTICS_URL=https://hive.analyzemyteam.com
SUPABASE_URL=https://supabase.analyzemyteam.com
SUPABASE_ANON_KEY=your-supabase-anon-key
NEO4J_URL=bolt://neo4j.analyzemyteam.com:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ============================================
# M.E.L. AI CONFIGURATION
# ============================================
# Anthropic Claude API for M.E.L. coaching intelligence
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
MEL_MODEL=claude-sonnet-4-20250514

# ============================================
# OPTIONAL SERVICES
# ============================================
# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Power BI Embed (Executive Suite module)
POWERBI_WORKSPACE_ID=
POWERBI_CLIENT_ID=
POWERBI_CLIENT_SECRET=
POWERBI_TENANT_ID=

# AWS S3 (for video storage - Dynamic Fabricator module)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=amt-videos

# SendGrid (for email notifications)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@analyzemyteam.com

# Stripe (for subscription management)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# DEVELOPMENT
# ============================================
NODE_ENV=development
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_DEBUG_MODE=false

# Feature Flags
NEXT_PUBLIC_ENABLE_MEL_AI=true
NEXT_PUBLIC_ENABLE_POWER_PLAYBOOKS=true
NEXT_PUBLIC_ENABLE_EXECUTIVE_SUITE=true
NEXT_PUBLIC_ENABLE_REALTIME_COLLABORATION=false
NEXT_PUBLIC_ENABLE_VIDEO_PROCESSING=false

# ============================================
# ANALYTICS
# ============================================
# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Mixpanel (optional)
NEXT_PUBLIC_MIXPANEL_TOKEN=

# ============================================
# DEPLOYMENT
# ============================================
# Vercel/Netlify specific
VERCEL_URL=
NETLIFY_URL=

# Docker/Kubernetes
DOCKER_REGISTRY=registry.analyzemyteam.com
KUBERNETES_NAMESPACE=amt-portal

# ============================================
# SECURITY
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://portal.analyzemyteam.com

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

# Session configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=604800

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# CACHE
# ============================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
